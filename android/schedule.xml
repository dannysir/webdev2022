<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/round_shape_purple"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/myschedule_todo_text"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="12sp"
            android:text="운동하기"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/myschedule_todoTime_text"
            android:layout_width="141dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="12sp"
            android:text="10:00 ~ 11:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/myschedule_check_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="14dp"
            android:onClick="onCheckboxClicked"/>
    <!--android:background="@drawable/round_shape_green"-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>